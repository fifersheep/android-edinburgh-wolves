<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="WolvesTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/white</item>

        <item name="colorPrimary">@color/palette_red</item>
        <item name="colorPrimaryDark">@color/palette_red_dark</item>
        <item name="colorAccent">@color/material_blue_grey_800</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="WolvesTheme" parent="WolvesTheme.Base" />

    <style name="WolvesTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WolvesTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
