<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="WolvesTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/white</item>

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/material_blue_grey_800</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="WolvesTheme" parent="WolvesTheme.Base"/>

    <style name="scoreboard_team">
        <item name="android:paddingTop">@dimen/scoreboard_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/scoreboard_top_bottom_padding</item>
    </style>
    <style name="scoreboard_score">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">@dimen/scoreboard_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/scoreboard_top_bottom_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="standings_table">
        <item name="android:background">@drawable/standings_border</item>
        <item name="android:padding">@dimen/standings_cell_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
