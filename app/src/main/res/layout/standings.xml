<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent"
android:id="@+id/background_layout"
android:background="@color/palette_grey_light"
android:layout_below="@+id/scoreboard_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/standings_table_card"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="@dimen/standings_table_row_spacing"
            android:background="@color/palette_white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/standings_title"
                android:textSize="@dimen/standings_title_text_size"
                android:textColor="@color/palette_red"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAA"/>

            <LinearLayout
                android:id="@+id/standings_table"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp">

                <!-- need to make table columns always align! -->
                <include layout="@layout/standings_table_item" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>